{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nuxt 3 (dev)",
      "program": "${workspaceFolder}/node_modules/.bin/nuxt",
      "args": ["dev"],
      "autoAttachChildProcesses": true,
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
